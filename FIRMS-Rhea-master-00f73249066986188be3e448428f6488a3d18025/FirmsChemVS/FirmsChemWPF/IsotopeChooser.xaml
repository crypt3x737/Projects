<Window x:Class="FirmsChemVS.IsotopeChooser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirmsChemVS"
        mc:Ignorable="d"
        Title="Isotope Chooser"
        SizeToContent="WidthAndHeight"
        MaxWidth="750"
        MaxHeight="750"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow">
    <Grid Name="grdElements">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Name="stpElements" Orientation="Horizontal" Grid.Row="0"/>
        
        <Label Name="lblIsotope" Grid.Row="1" Height="40" Margin="10, 0, 10, 0" FontSize="20"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="btnSetIsotope" Content="Set Isotope" Width="75" Height="25" Margin="10" Click="btnSetIsotope_Click"/>
            <Button Name="btnResetIsotope" Content="Reset Isotope" Width="85" Height="25" Margin="0, 10, 10, 10" Click="btnResetIsotope_Click"/>
        </StackPanel>
    </Grid>
</Window>
